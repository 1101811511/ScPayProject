<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/main_title"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip">

        <ImageView
            android:visibility="invisible"
            android:id="@+id/pop_back"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择支付方式"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/fenge_1" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/popup_item_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="15.0dip"
                android:padding="8.0dip">

                <ImageView
                    android:layout_width="25.0dip"
                    android:layout_height="30.0dip"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ddzf_zffs_yhk" />

                <TextView
                    android:id="@+id/tv_item_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="银行卡"
                    android:textColor="@color/black"
                    android:textSize="@dimen/def_sml_text_size" />

                <ImageView
                    android:id="@+id/item_zyzj"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                     />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/fenge_1" />

            <LinearLayout
                android:id="@+id/popup_item_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="15.0dip"
                android:padding="8.0dip">

                <ImageView
                    android:layout_width="25.0dip"
                    android:layout_height="30.0dip"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ddzf_zffs_yhk" />

                <TextView
                    android:id="@+id/tv_item_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="聚合扫码(主扫)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/def_sml_text_size" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/popup_item2_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/fenge_1" />

            <LinearLayout
                android:id="@+id/popup_item_three"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="15.0dip"
                android:padding="8.0dip">

                <ImageView
                    android:layout_width="25.0dip"
                    android:layout_height="30.0dip"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ddzf_zffs_yhk" />

                <TextView
                    android:id="@+id/tv_item_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="聚合扫码(被扫)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/def_sml_text_size" />

                <ImageView
                    android:id="@+id/popup_item3_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/fenge_1" />







        </LinearLayout>
    </ScrollView>
</LinearLayout>